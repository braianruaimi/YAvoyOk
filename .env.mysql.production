# ========================================
# YAVOY v3.1 ENTERPRISE - PRODUCCIÓN MYSQL
# ========================================
# 
# IMPORTANTE: NO SUBIR ESTE ARCHIVO A GIT
# Copiar a .env en el VPS y completar con valores reales
# 
# @version 2.0.0 - Migrado a MySQL
# @date 5 de febrero de 2026
# ========================================

# ============================================
# ENTORNO
# ============================================
NODE_ENV=production
PORT=5502
LOG_LEVEL=info

# ============================================
# BASE DE DATOS MYSQL - HOSTINGER
# ============================================
DB_HOST=mysql-shared-XX.hostinger.com
DB_USER=u123456789_yavoy
DB_PASSWORD=TuPasswordMySQL
DB_NAME=u123456789_yavoy
DB_PORT=3306
DB_POOL_MAX=20
DB_POOL_MIN=2

# ============================================
# JWT - AUTENTICACIÓN
# ============================================
JWT_SECRET=yavoy_secret_key_production_2026
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=yavoy_refresh_secret_production_2026
REFRESH_TOKEN_EXPIRES_IN=7d

# ============================================
# EMAIL - HOSTINGER SMTP
# ============================================
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=tu-email@tudominio.com
SMTP_PASS=TuPasswordSMTP
SMTP_SECURE=true
SMTP_TLS=false

# ============================================
# CORS - DOMINIOS PERMITIDOS
# ============================================
ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ============================================
# LOGS
# ============================================
LOG_FILE=logs/yavoy-production.log
MAX_LOG_SIZE=20971520

# ============================================
# ARCHIVOS ESTÁTICOS
# ============================================
REGISTROS_PATH=./registros
MAX_FILE_SIZE=10485760

# ============================================
# PUSH NOTIFICATIONS - VAPID
# ============================================
VAPID_PUBLIC_KEY=TuClavePublicaVAPID
VAPID_PRIVATE_KEY=TuClavePrivadaVAPID
VAPID_SUBJECT=mailto:tu-email@tudominio.com

# ============================================
# MERCADOPAGO
# ============================================
MERCADOPAGO_ACCESS_TOKEN=APP_USR-tu-access-token
MERCADOPAGO_PUBLIC_KEY=APP_PUB-tu-public-key
MERCADOPAGO_WEBHOOK_SECRET=tu-webhook-secret

# ============================================
# GOOGLE OAUTH2 (SI SE USA)
# ============================================
GOOGLE_CLIENT_ID=tu-google-client-id
GOOGLE_CLIENT_SECRET=tu-google-client-secret
GOOGLE_REDIRECT_URI=https://tudominio.com/auth/google/callback

# ============================================
# REDIS (SI SE USA)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=tu-redis-password

# ============================================
# MONITORING
# ============================================
SENTRY_DSN=https://tu-sentry-dsn
NEW_RELIC_LICENSE_KEY=tu-new-relic-key

# ============================================
# FEATURES PREMIUM
# ============================================
FEATURES_PREMIUM_ENABLED=true
CALIFICACIONES_ENABLED=true
PUNTOS_ENABLED=true
PROPINAS_ENABLED=true

# ============================================
# CONFIGURACIÓN AVANZADA
# ============================================
CLUSTER_MODE=true
WORKERS_COUNT=auto
COMPRESSION_ENABLED=true
CACHE_TTL=3600

# ============================================
# BACKUP Y MANTENIMIENTO
# ============================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
CLEANUP_LOGS_ENABLED=true
CLEANUP_DAYS=30